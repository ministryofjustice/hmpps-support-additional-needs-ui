<div class="govuk-summary-card__content govuk-!-padding-bottom-0 govuk-!-padding-top-2" data-qa="support-strategies-actions">
  <ul class="govuk-list govuk-!-margin-0" data-qa="support-strategies-action-items">
    {% if params.userHasPermissionTo('RECORD_SUPPORT_STRATEGIES') %}
      <li class="govuk-!-margin-0 govuk-!-padding-bottom-3 govuk-!-padding-top-3">
        <a class="govuk-link" data-qa="add-support-strategy-button" href="/support-strategies/{{ params.prisonerSummary.prisonNumber }}/create/select-category">
          <span>
            <img src="/assets/images/icon-edit.svg" role="presentation" alt="" class="action-icon" />
            Add support strategy
          </span>
        </a>
      </li>
    {% endif %}
  </ul>
</div>

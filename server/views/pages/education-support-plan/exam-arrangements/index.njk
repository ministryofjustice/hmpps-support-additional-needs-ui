{% extends "../layout.njk" %}

{% set pageId = 'education-support-plan-exam-arrangements' %}
{% set pageTitle = 'Review an education support plan - Review access arrangements for exams or assessments' if mode == 'review' else 'Create an education support plan - Needs access arrangements for exams or assessments' %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      <form class="form" method="post" novalidate="">
        <div class="govuk-form-group">
          <input type="hidden" name="_csrf" value="{{ csrfToken }}" />

          {% set detailsHtml %}
            {{ govukTextarea({
              id: "details",
              name: "details",
              rows: "4",
              value: form.details,
              type: "text",
              label: {
                text: "Edit details" if mode == 'review' and currentAnswer != "No" else "Add details",
                attributes: { "aria-live": "polite" }
              },
              hint: {
                text: 'Include if an assessment for access arrangements needs to happen.'
              },
              attributes: { "aria-label" : "Give details of any required access arrangements for exams" },
              errorMessage: errors | findError('details')
            }) }}
          {% endset %}

          {% set hintText %}
            {% if mode == 'review' %}
              {% set currentAnswer %}
                <h3 class="govuk-heading-s">Current answer</h3>
                <p class="govuk-body app-u-multiline-text">{{ currentAnswer }}</p>
              {% endset %}
              {{ govukInsetText({
                html: currentAnswer
              }) }}
            {% endif %}
          {% endset %}

          {{ govukRadios({
            name: "arrangementsNeeded",
            fieldset: {
              legend: {
                text: "Does " + prisonerSummary | formatFirst_name_Last_name + " need any access arrangements for exams or assessments?",
                isPageHeading: true,
                classes: "govuk-fieldset__legend--l"
              }
            },
            hint: {
              html: hintText
            },
            items: [
              {
                value: "YES",
                text: "Yes",
                checked: form.arrangementsNeeded === "YES",
                conditional: {
                  html: detailsHtml
                }
              },
              {
                value: "NO",
                text: "No",
                checked: form.arrangementsNeeded === "NO"
              }
            ],
            errorMessage: errors | findError('arrangementsNeeded')
          }) }}
        </div>

        {{ govukButton({
          id: "submit-button",
          text: "Continue",
          type: "submit",
          attributes: {"data-qa": "submit-button"},
          preventDoubleClick: true
        }) }}
      </form>
    </div>
  </div>
{% endblock %}
